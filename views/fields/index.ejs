<!DOCTYPE html>
<html>
<head>
    <title>Form Fields List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .table {
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .table th {
            background-color: #007bff;
            color: white;
            text-align: center;
        }

        .table td {
            vertical-align: middle;
            text-align: center;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #b02a37;
            border-color: #b02a37;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-sm {
            font-size: 12px;
            padding: 5px 10px;
        }

        .btn-edit {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-edit:hover {
            background-color: #1e7e34;
            border-color: #1e7e34;
        }

        .search-container {
            margin-bottom: 20px;
        }

        .search-container input {
            width: 100%;
            max-width: 300px;
            padding: 8px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
<%- include('../components/navbar') %>
<div class="container">
    <div class="row">
        <div class="col">
            <h1>Form Fields List</h1>
        </div>
        <div class="col text-right">
            <a href="/fields/create" class="btn btn-primary">Create New Form Field</a>
        </div>
    </div>
    <hr>

    <!-- Search Filter -->
    <div class="search-container">
        <input type="text" id="searchInput" placeholder="Search by title...">
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped mt-3" id="formFieldsTable">
            <thead>
            <tr>
                <th>Title</th>
                <th>Answer Data Type</th>
                <th>Has Required Description</th>
                <th>Required Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% formFields.forEach(formField => { %>
                <tr>
                    <td><%= formField.title %></td>
                    <td><%= formField.answerDataType %></td>
                    <td><%= formField.hasRequiredDescription ? 'Yes' : 'No' %></td>
                    <td><%= formField.requiredDescription %></td>
                    <td>
                        <a href="/fields/<%= formField._id %>/update" class="btn btn-info btn-sm btn-edit">Edit</a>
                        <form action="/api/formFields/<%= formField._id %>?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
</div>

<script>
    // JavaScript for Search Filter
    const searchInput = document.getElementById('searchInput');
    const formFieldsTable = document.getElementById('formFieldsTable');
    const tableRows = formFieldsTable.getElementsByTagName('tr');

    searchInput.addEventListener('keyup', function () {
        const filter = searchInput.value.toLowerCase();

        for (let i = 1; i < tableRows.length; i++) {
            const title = tableRows[i].getElementsByTagName('td')[0].innerText.toLowerCase();
            if (title.includes(filter)) {
                tableRows[i].style.display = '';
            } else {
                tableRows[i].style.display = 'none';
            }
        }
    });
</script>
</body>
</html>
