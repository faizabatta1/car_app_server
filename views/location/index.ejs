<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Location List</title>
    <!-- Add Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .container {
            padding: 20px;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .controls{
            display: flex;
        }

        .controls > *{
            flex-grow: 1;
        }

        .controls > :first-child{
            margin-right: 10px;
        }

        .add-location-btn {
            margin-bottom: 20px;
        }
        .table-container {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }
    </style>
</head>
<body>
<%- include('../components/navbar') %>

<div class="container">
    <h1>Location List</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 table-container p-3">
            <a href="/locations/create" class="btn btn-primary add-location-btn">Add New Location</a>
            <table class="table table-striped table-bordered text-center">
                <thead>
                <tr>
                    <th>Location</th>
                    <th>Days</th>
                    <th>Shifts</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody id="locationTableBody">
                <!-- Location data will be inserted here -->
                <% if (locations.length === 0) { %>
                    <tr>
                        <td colspan="2" class="text-center">No locations found.</td>
                    </tr>
                <% } else { %>
                    <% locations.forEach(location => { %>
                        <tr>
                            <td><%= location.location %></td>
                            <td><%= location.days.join(', ') %></td>
                            <td><%= location.shifts.join(', ') %></td>
                            <td class="controls">
                                <a href="/locations/<%= location._id %>/update" class="btn btn-sm btn-primary">Edit</a>
                                <button class="btn btn-sm btn-danger" onclick="deleteLocation('<%= location._id %>')">Delete</button>
                            </td>
                        </tr>
                    <% }); %>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Add Bootstrap JS and Popper.js scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    function deleteLocation(id){
        fetch(`/api/locations/${id}`, {
            method: 'DELETE',
        })
            .then(response => {
                if (response.status == 200) {
                    alert('Location Deleted successfully.');
                    window.location.href = '/locations'; // Redirect to the location list page
                } else {
                    alert('Failed to delete location. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while deleting the location. Please try again.');
            });
    }
</script>
</body>
</html>
