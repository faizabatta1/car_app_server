<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Car</title>
    <!-- Add Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<%- include('../components/navbar') %>
<div class="container mt-5">
    <h1 class="text-center">Create New Car</h1>
    <form id="createCarForm">
        <div class="mb-3">
            <label for="boardNumber" class="form-label">Board Number</label>
            <input type="text" class="form-control" id="boardNumber" name="boardNumber" required>
        </div>
        <div class="mb-3">
            <label for="privateNumber" class="form-label">Private Number</label>
            <input type="text" class="form-control" id="privateNumber" name="privateNumber" required>
        </div>
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-primary me-3" onclick="submitForm()">Save</button>
            &nbsp;
            &nbsp;
            <a href="/cars" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
<!-- Add Bootstrap JS and Popper.js scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.5.0/js/bootstrap.min.js"></script>
<script>
  function submitForm() {
    const boardNumber = document.getElementById('boardNumber').value;
    const privateNumber = document.getElementById('privateNumber').value;

    const formData = {
      boardNumber: boardNumber,
      privateNumber: privateNumber
    };

    fetch('/api/cars', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(formData)
    })
      .then(response => {
        if (response.ok) {
          // Car created successfully, you can redirect to another page or display a success message
          alert('Car created successfully!');
          window.location.href = '/cars'; // Redirect to the car list page
        } else {
          // Handle the error response if needed
          alert('Failed to create car. Please try again.');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred. Please try again later.');
      });
  }
</script>
</body>
</html>
