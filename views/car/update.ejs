<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Car</title>
    <!-- Add Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<%- include('../components/navbar') %>

<div class="container mt-5">
    <h1 class="text-center">Edit Car</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="editCarForm">
                <div class="form-group">
                    <label for="boardNumber">Board Number</label>
                    <input type="text" class="form-control" id="boardNumber" name="boardNumber" value="<%= car.boardNumber %>" required>
                </div>
                <div class="form-group">
                    <label for="privateNumber">Private Number</label>
                    <input type="text" class="form-control" id="privateNumber" name="privateNumber" value="<%= car.privateNumber %>" required>
                </div>
                <div class="text-center">
                    <button type="button" class="btn btn-primary" onclick="updateCar()">Save Changes</button>
                    <a href="/cars" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Add Bootstrap JS and Popper.js scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    function updateCar() {
        const form = document.getElementById('editCarForm');
        const formData = new FormData(form);
        const carId = '<%= car._id %>';

        fetch(`/api/cars/${carId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(Object.fromEntries(formData))
        })
            .then(response => {
                if (response.ok) {
                    alert('Car details updated successfully.');
                    window.location.href = '/cars'; // Redirect to the car list page
                } else {
                    alert('Failed to update car details. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while updating car details. Please try again.');
            });
    }
</script>
</body>
</html>
