<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car List</title>
    <style>
        .controls{
            display: flex;
        }

        .controls > *{
            flex-grow: 1;
        }

        .controls > :first-child{
            margin-right: 10px;
        }
    </style>
    <!-- Add Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<%- include('../components/navbar') %>

<div class="container mt-5">
    <h1 class="text-center">Car List</h1>
    <a href="/cars/create" class="btn btn-primary mb-3">Add New Car</a>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped text-center">
            <thead>
            <tr>
                <th>Board Number</th>
                <th>Private Number</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% if (cars.length > 0) { %>
                <% cars.forEach(car => { %>
                    <tr>
                        <td><%= car.boardNumber %></td>
                        <td><%= car.privateNumber %></td>
                        <td class="controls">
                            <a href="/cars/<%= car._id %>/update" class="btn btn-sm btn-primary">Edit</a>
                            <button class="btn btn-sm btn-danger" onclick="deleteCar('<%= car._id %>')">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="3" class="text-center">No cars found.</td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
<!-- Add Bootstrap JS and Popper.js scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    function deleteCar(carId) {
        if (confirm('Are you sure you want to delete this car?')) {
            fetch(`/api/cars/${carId}`, {
                method: 'DELETE',
            })
                .then(response => {
                    if (response.ok) {
                        // Car deleted successfully, you can update the UI or show a success message
                        alert('Car deleted successfully!');
                        window.location.reload(); // Refresh the page to reflect the changes
                    } else {
                        // Handle the error response if needed
                        alert('Failed to delete car. Please try again.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred. Please try again later.');
                });
        }
    }
</script>
</body>
</html>
